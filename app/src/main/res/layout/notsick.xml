<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="333dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toStartOf="@+id/stop8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stop8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barfingrainbow" />

    <TextView
        android:id="@+id/stop8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        android:text="You're not sick! \n You're just trying to get out of school!"
        android:textAlignment="center"
        android:textColor="#9A1616"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:layout_marginTop="452dp"
        android:background="#80DDDD"
        android:backgroundTint="#DCC384"
        android:text="Return Home"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

